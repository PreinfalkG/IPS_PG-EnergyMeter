    "actions": [
        {
            "type": "Button",
            "label": "Update",
            "onClick": "MECM_Update($id);"
        },
        {
            "type": "Button",
            "label": "Show and Match Config Array Entries",
            "onClick": "MECM_CheckConfig($id);"
        }, 
        {
            "type": "Button",
            "label": "Meter Hard- and Software Info",
            "onClick": "MECM_GetDeviceInfo($id);"
        },        
        {
            "type": "Button",
            "caption": "Reset Counter Variables",
            "onClick": "MECM_ResetCounterVariables($id);"
        }
    ],
    "status": [
        {
            "code": 101,
            "icon": "inactive",
            "caption": "Enable AUTO Update"
        },
        {
            "code": 102,
            "icon": "active",
            "caption": "Connection to MEC-Meter API has been established"
        },
        {
            "code": 200,
            "icon": "inactive",
            "caption": "Error: Could not connect to MEC-Meter API"
        }
