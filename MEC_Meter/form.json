                    "caption": "Auto Update",
                    "width": "200px"
                },
                {
                    "name": "AutoUpdateInterval",
                    "type": "NumberSpinner",
                    "caption": "Update Interval",
                    "suffix": "sec"
                }
            ]
        },        
        {
            "name": "LogLevel",
            "type": "Select",
            "caption": "Debug/Log Level",
            "options": [
                {
                    "label": "ALL",
                    "value": 9
                },
                {
                    "label": "TEST",
                    "value": 8
                },
                {
                    "label": "TRACE",
                    "value": 7
                },
                {
                    "label": "COMMUNICATION",
                    "value": 6
                },
                {
                    "label": "DEBUG",
                    "value": 5
                },
                {
                    "label": "INFO",
                    "value": 4
                },
                {
                    "label": "WARN",
                    "value": 3
                },
                {
                    "label": "ERROR",
                    "value": 2
                },
                {
                    "label": "FATAL",
                    "value": 1
                },
                {
                    "label": "OFF",
                    "value": 0
                }
            ]
        },
        {
            "type": "Label",
            "label": " "
        },
        {
            "type": "CheckBox",
