{
    "elements": [
        {
            "type": "RowLayout",
            "visible": true,
            "items": [
                {
                    "type": "ValidationTextBox",
                    "caption": "Meter IP",
                    "name": "MecMeter_IP"
                },
                {
                    "type": "ValidationTextBox",
                    "caption": "Meter Name",
                    "name": "MecMeter_Name"
                }               
            ]
        },
        {
            "type": "ValidationTextBox",
            "caption": "Meter Info (Sicherungskreis, Note, ...)",
            "name": "MecMeter_Info"
        }, 
        {
            "type": "RowLayout",
            "visible": true,
            "items": [        
                {
                    "type": "ValidationTextBox",
                    "caption": "User",
                    "name": "MecMeter_User"
                },
        
                {
                    "type": "ValidationTextBox",
                    "caption": "Password",
                    "name": "MecMeter_PW"
                }
            ]
        },
        {
            "type": "RowLayout",
            "visible": true,
            "items": [        
                {
                    "name": "EnableAutoUpdate",
